<Window x:Name="window"
        x:Class="NCRS_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NCRS_Client"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="NCRS" Height="550" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" BorderBrush="Black"  BorderThickness="0,0,1,0"/>
        <Button Content="Overview" Click="Overview_Button_Click" HorizontalAlignment="Left" Margin="75,72,0,0" VerticalAlignment="Top"/>
        <Button Content="New Complaint" Click="New_Complaint_Button_Click" HorizontalAlignment="Left" Margin="75,158,0,0" VerticalAlignment="Top"/>
        <Button Content="Logout" Click="Logout_Button_Click" HorizontalAlignment="Left" Margin="75,479,0,0" VerticalAlignment="Top"/>
        <Frame x:Name="MainFrame" Grid.Column="1" Source="/Overview.xaml" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
